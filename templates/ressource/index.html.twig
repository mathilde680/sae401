                        </a>
                        {% for evaluation in semestre.matiere.evaluation %}
                            <div class="evaluation_box_nom">
                                <p>{{ evaluation.nom }}</p>
                                <p>{{ evaluation.statut }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>

            <!--Matiere du semestre6-->
            <h3>Semestre6</h3>
            <div class="ressource_prof_grid">
                {% for semestre in semestre6 %}
                    <div class="ressources_carte">
                        <a title="Afficher la ressource" href="{{ path('app_fiche_matiere', {'id': semestre.matiere.id}) }}">
                            {{ semestre.matiere.nom }}
                        </a>
                        {% for evaluation in semestre.matiere.evaluation %}
                            <p>{{ evaluation.nom }}</p>
                            <p>{{ evaluation.statut }}</p>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
