                        <div class="grillesAffichage">

                            <!-- MODAL -->
                            <a href="#" class="grille-link"
                               data-id="{{ grille.id }}"
                               data-nom="{{ grille.nom }}"
                               data-criteres="{{ grille.criteres|map(c => {
                                   'id': c.id,
                                   'nom': c.nom,
                                   'note': c.note,
                                   'commentaire': c.commentaire
                               })|json_encode|e('html_attr') }}"
                            >{{ grille.nom }}</a>

                            <div class="overlay" id="modalOverlay">
