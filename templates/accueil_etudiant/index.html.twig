{% extends 'base.html.twig' %}

{% block title %}Hello AccueilEtudiantController!{% endblock %}

{% block body %}
    {% block main %}
        <section id="dashboardProf">
            <div class="gridProf">
                <!--box alerte-->
                <div class="alertesEtudiant">
                    <div class="headerSectionDash">
                        <div class="nomSection">
                            <svg class="icons" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0M3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5" />
                            </svg>
                            <h2>Alertes</h2>
                        </div>
                    </div>
                    <div class="allAlertes">
                        {% for alerte in alertes %}
                            <div class="alerteItem">
                                <div>
                                    <img src="{{ asset('img/avatar/') }}{{ alerte.evaluation.professeur.photo }}" alt="Avatar du profil">
                                </div>
                                <p>{{ alerte.evaluation.professeur.nom }} {{ alerte.evaluation.professeur.prenom }} {{ alerte.message }} {{ alerte.evaluation.matiere.nom }}.</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!--box demandes-->
                <div class="demandesEtudiant">
                    <div class="headerSectionDash">
                        <div class="nomSection">
                            <svg class="icons" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 7.5V6.108c0-1.135.845-2.098 1.976-2.192.373-.03.748-.057 1.123-.08M15.75 18H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08M15.75 18.75v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5A3.375 3.375 0 0 0 6.375 7.5H5.25m11.9-3.664A2.251 2.251 0 0 0 15 2.25h-1.5a2.251 2.251 0 0 0-2.15 1.586m5.8 0c.065.21.1.433.1.664v.75h-6V4.5c0-.231.035-.454.1-.664M6.75 7.5H4.875c-.621 0-1.125.504-1.125 1.125v12c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V16.5a9 9 0 0 0-9-9Z" />
                            </svg>
                            <h2>Demandes</h2>
                        </div>
                    </div>
                </div>



                <!--box groupes-->
                <div class="groupesEtudiant">
                    <div class="headerSectionDash">
                        <div class="nomSection">
                            <svg class="icons" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                            </svg>
                            <h2>Mes groupes</h2>
                        </div>
                    </div>
                    <div id="div_groupe">
                        {% for evaluation in evaluations %}
                            <div class="div_nom_groupe">
                                <p class="matiere_groupe">{{ evaluation.matiere.nom }}</p>
                                <p class="matiere_evaluation">{{ evaluation.nom }}</p>
                                <a class="matiere_voir" href="{{ path('app_groupe', {'id': evaluation.id}) }}">Voir</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!--box progression-->
                <div class="progressionEtudiant">
                    <div class="headerSectionDash">
                        <div class="nomSection">
                            <svg class="icons" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 14.25v2.25m3-4.5v4.5m3-6.75v6.75m3-9v9M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z" />
                            </svg>
                            <h2>Ma progression</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}
{% endblock %}
