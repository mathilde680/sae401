{% extends 'base.html.twig' %}

{% block title %}Ajout Groupe Evaluation{% endblock %}

{% block main %}
    <div class="ajoutEvaluation">
        {% block form %}
            <h1>Groupe : {{ matiere.nom }}</h1>

            {{ form_start(form_evaluation) }}
                {{ form_row(form_evaluation.formation_groupe) }}
                <div class="alert">{{ form_errors(form_evaluation.formation_groupe) }}</div>

                {{ form_row(form_evaluation.type_groupe) }}
                <div class="alert">{{ form_errors(form_evaluation.type_groupe) }}</div>

                {{ form_row(form_evaluation.taille_max_groupe) }}
                <div class="alert">{{ form_errors(form_evaluation.taille_max_groupe) }}</div>
                <!--<button class="btn bouton" type="submit">Ajouter</button>-->

            <div class="duo">
                <button class="btn bouton" type="submit">
                    {{ button_label|default('Ajouter') }}
                    <svg width="15" height="8" viewBox="0 0 20 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15.25 1.25L19 5M19 5L15.25 8.75M19 5H1" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
            </div>
            {{ form_end(form_evaluation) }}
        {% endblock %}
    </div>
{% endblock %}